<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/builtQualifierColor"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="6dp"

                />

            <TextView
                android:id="@+id/builtQualifierCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/builtQualifierColor"

                android:text="Author"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/builtQualifierSearchTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/builtQualifierCategoryText"
                android:layout_toEndOf="@id/builtQualifierColor"
                android:text="Nikola Tesla"
                android:textSize="14sp"
                android:maxLines="2"
                android:minLines="2"/>

            <TextView
                android:id="@+id/builtQualifierDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/builtQualifierSearchTerm"
                android:layout_toEndOf="@id/builtQualifierColor"
                android:text="A custom description for this author"
                android:textSize="12sp"
                android:maxLines="2"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>